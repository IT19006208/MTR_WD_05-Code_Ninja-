<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dd6"
    tools:context=".PaymentActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please write your Payment Details"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold"

        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/payment_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@android:color/white"
        android:hint="Name(As appears on your card):"


        />

    <EditText
        android:id="@+id/payment_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_card_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@android:color/white"
        android:hint="Card Number(No dashes or spaces):"
        android:inputType="number" />

    <EditText
        android:id="@+id/payment_card_exdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_card_number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="59dp"
        android:layout_marginRight="20dp"
        android:hint="Expiration Date:"
        android:textColorHint="@android:color/white"
        android:inputType="number" />

    <EditText
        android:id="@+id/payment_card_secode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_card_number"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="51dp"
        android:hint="Security Code:"
        android:textColorHint="@android:color/white"
        android:inputType="number" />
    <EditText
        android:id="@+id/payment_card_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_card_exdate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginRight="20dp"
        android:hint="Total:"
        android:textColorHint="@android:color/white"
        android:inputType="number" />
    <Button
        android:id="@+id/pay_now_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Pay Now"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        />


</RelativeLayout>